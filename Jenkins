pipeline { 
    agent any 

    stages {
        stage('Deploy CloudFormation Stack') {
            steps {
              withAWS(region: 'us-east-1', credentials: 'aws-jenkins-creds') {   
                sh '''
                  aws cloudformation deploy \
                    --stack-name ecinstance10 \
                    --template-file create_ec2.yml \
                    --capabilities CAPABILITY_NAMED_IAM \
                    --tags key=Name,Value=127asp01 key=costid,Value=127asp02 \
                    --region us-east-1 \
                    --no-cli-pager
                '''  
               }
            } 
        }
    }
}
